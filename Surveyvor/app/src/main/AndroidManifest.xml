<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="es.system.dc">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.Surveyvor"
            tools:replace="android:theme, android:icon">
        <activity
                android:name=".activity.QuestionsPerSurveyActivity"
                android:exported="true"/>
        <activity
                android:name=".activity.MessageActivity"
                android:exported="true"/>
        <activity
                android:name=".activity.MainChatActivity"
                android:exported="true"/>
        <activity
                android:name=".activity.StatsActivity"
                android:exported="true"
                android:parentActivityName=".activity.SurveyDetailsActivity"/>
        <activity
                android:name=".activity.ProfileActivity"
                android:exported="true"
                android:parentActivityName=".activity.SurveyDetailsActivity">
            <intent-filter
                    android:autoVerify="true"
                    android:label="Surveyvor">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <!-- Accepts URIs that begin with "https://www.surveyvor-shocklogic.com/user” -->
                <data
                        android:host="www.surveyvor-shocklogic.com"
                        android:pathPrefix="/user"
                        android:scheme="https"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activity.ThankYouActivity"
                android:exported="true"/>
        <activity
                android:name=".activity.QuestionAnswerActivity"
                android:exported="true"/>
        <activity
                android:name=".activity.EditSurveyActivity"
                android:exported="true"
                android:parentActivityName=".activity.SurveyDetailsActivity"/>
        <activity
                android:name=".activity.EditTeamActivity"
                android:exported="true"
                android:parentActivityName=".ui.team.TeamFragment"/>
        <activity
                android:name=".activity.CreateTeamActivity"
                android:exported="true"
                android:parentActivityName=".ui.team.TeamFragment"/>
        <activity
                android:name=".activity.AnswerSurveyActivity"
                android:exported="true">
            <intent-filter
                    android:autoVerify="true"
                    android:label="Surveyvor">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <!-- Accepts URIs that begin with "https://www.surveyvor-shocklogic.com/survey” -->
                <data
                        android:host="www.surveyvor-shocklogic.com"
                        android:pathPrefix="/survey"
                        android:scheme="https"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activity.QuestionMakerActivity"
                android:exported="true"/>
        <activity
                android:name=".activity.SurveyListedActivity"
                android:exported="true"
                android:label="@string/title_activity_survey_listed"
                android:theme="@style/Theme.Surveyvor.NoActionBar"/>
        <activity
                android:name=".activity.MainActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activity.RegisterActivity"
                android:exported="true"
                android:parentActivityName=".activity.MainActivity"/>
        <activity
                android:name=".activity.SurveyDetailsActivity"
                android:exported="true"
                android:parentActivityName=".activity.SurveyListedActivity"/>
    </application>

</manifest>