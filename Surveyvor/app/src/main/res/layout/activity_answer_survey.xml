<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layoutSurveyAnswer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.RegisterActivity"
            android:gravity="center_horizontal">

        <TextView
                android:id="@+id/survey_name_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Survey Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="35dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp"/>

        <ImageView
                android:layout_width="450px"
                android:layout_height="450px" app:srcCompat="@drawable/epstmlgv1" android:id="@+id/imageView" android:layout_marginTop="30dp"/>

        <EditText
                android:id="@+id/survey_description_answer"
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:hint="Survey Description"
                android:enabled="false"
                android:layout_marginTop="20dp"/>

        <Button
                android:id="@+id/buttonStartSurvey"
                android:layout_width="331dp"
                android:layout_height="62dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:onClick="startSurvey"
                android:text="Start Survey"/>
    </LinearLayout>
</ScrollView>