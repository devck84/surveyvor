<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
    <LinearLayout
            android:id="@+id/edit_team_comp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.RegisterActivity"
            android:gravity="center_horizontal">

        <TextView
                android:id="@+id/dni_info_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Team"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="35dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp"/>

        <ImageView
                android:layout_width="450px"
                android:layout_height="450px" app:srcCompat="@drawable/epstmlgv1" android:id="@+id/imageView" android:layout_marginTop="30dp"/>

        <EditText
                android:id="@+id/team_name_update"
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Team Name"
                android:layout_marginTop="20dp"/>

        <EditText
                android:id="@+id/team_description_update"
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:hint="Team Description"
                android:layout_marginTop="20dp"/>


        <Button
                android:id="@+id/button"
                android:layout_width="331dp"
                android:layout_height="62dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:onClick="createTeam"
                android:text="Update"/>
        <TextView
                android:text="Team Members"
                android:layout_width="331dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="25dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:layout_height="wrap_content" android:id="@+id/textView4"/>
    </LinearLayout>
</ScrollView>