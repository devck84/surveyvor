<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ProfileActivity">
    <ImageView
            android:layout_width="135dp"
            android:layout_height="135dp" tools:src="@drawable/epstmlgv1" android:id="@+id/profile_image"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" tools:srcCompat="@drawable/epstmlgv1" app:srcCompat="@drawable/epstmlgv1"/>
    <TextView
            android:text="Full Name"
            android:layout_width="202dp"
            android:layout_height="27dp" android:id="@+id/profile_name"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/profile_image" android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"/>
    <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/profile_email"
            app:layout_constraintTop_toBottomOf="@+id/profile_name"
            android:layout_marginTop="16dp" app:layout_constraintStart_toEndOf="@+id/profile_image"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="Add Friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/multi_profile_button"
            android:onClick="multiButtonClick"
            app:layout_constraintStart_toEndOf="@+id/profile_image" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_email" android:layout_marginTop="24dp"/>
    <TextView
            android:text="Public Surveys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/public_survey_title"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"/>
</androidx.constraintlayout.widget.ConstraintLayout></ScrollView>